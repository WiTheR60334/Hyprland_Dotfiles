@import "~/.config/rofi/master-config.rasi"

/* ---- Window ---- */
window {
  width: 30%;
}

button {
  width: 110px;
}

/* ---- Listview ---- */
listview {
  columns: 3;
  lines: 4;
  fixed-height: false;
}

/* ---- Element ---- */
element {
  orientation: vertical;
  padding: 10px 5px 10px 5px;
  spacing: 6px;
}

element-icon {
  size: 3%;
}

element-text {
  font: "JetBrainsMono Nerd Font SemiBold 12";
  horizontal-align: 0.5;
  text-align: center;
}